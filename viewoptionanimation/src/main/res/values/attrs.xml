<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OptionView">
        <attr name="option_num" format="integer" />
        <attr name="src_image_id" format="reference" />
        <attr name="option_image_id1" format="reference" />
        <attr name="option_image_id2" format="reference" />
        <attr name="option_image_id3" format="reference" />

        <attr name="option_text_id1" format="string" />
        <attr name="option_text_id2" format="string" />
        <attr name="option_text_id3" format="string" />

        <attr name="option_text_sp" format="dimension" />
        <attr name="option_image_width" format="dimension" />
        <attr name="option_image_height" format="dimension" />

        <!-- 多分、colorとreferenceどちらも指定できるんだと思う -->
        <attr name="foo" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="originalViewStyle" format="reference" />
    </declare-styleable>
</resources>

